#!/usr/bin/env bash
# K3s Cluster Configuration
# This file contains all configurable parameters for the cluster setup

# Cluster Configuration
CLUSTER_NAME="bigmac-cluster"
CLUSTER_DOMAIN="bigmac-attack.com"
K3S_VERSION="latest"  # Or specify version like "v1.28.3+k3s1"

# Network Configuration
CONTROL_PLANE_IP="192.168.1.204"
WORKER_IPS=(
    "192.168.1.246"
    "192.168.1.251"
    "192.168.1.183"
    "192.168.1.213"
    "192.168.1.58"
)
NETWORK_SUBNET="192.168.1.0/24"
POD_CIDR="10.42.0.0/16"
SERVICE_CIDR="10.43.0.0/16"

# Node Configuration
# Default SSH user - can be overridden per node
DEFAULT_SSH_USER="${DEFAULT_SSH_USER:-damonmcdougald}"
SSH_KEY_PATH="${SSH_KEY_PATH:-$HOME/.ssh/id_rsa}"
SSH_OPTIONS="-o StrictHostKeyChecking=accept-new -o ConnectTimeout=10"

# Per-node configuration (IP:username format)
# Override default username for specific nodes
declare -A NODE_USERS
NODE_USERS["192.168.1.204"]="${NODE_USER_204:-damonmcdougald}"
NODE_USERS["192.168.1.246"]="${NODE_USER_246:-damonmcdougdl}"  # Note: different username
NODE_USERS["192.168.1.251"]="${NODE_USER_251:-damonmcdougald}"
NODE_USERS["192.168.1.183"]="${NODE_USER_183:-damonmcdougald}"
NODE_USERS["192.168.1.213"]="${NODE_USER_213:-damonmcdougald}"
NODE_USERS["192.168.1.58"]="${NODE_USER_58:-damonmcdougald}"

# Function to get SSH user for a specific node
get_ssh_user() {
    local node_ip=$1
    echo "${NODE_USERS[$node_ip]:-$DEFAULT_SSH_USER}"
}

# Legacy support - set SSH_USER to default for backward compatibility
SSH_USER="${DEFAULT_SSH_USER}"

# Storage Configuration
NFS_EXPORT_PATH="/Users/Shared/k3s-nfs"
NFS_MOUNT_OPTIONS="rw,hard,intr,rsize=8192,wsize=8192,timeo=14"

# Kubernetes Configuration
KUBECONFIG_PATH="${KUBECONFIG_PATH:-$HOME/.kube/config}"
KUBECTL_CONTEXT="${CLUSTER_NAME}"

# Cloudflare Configuration
CLOUDFLARE_TUNNEL_NAME="${CLUSTER_NAME}-tunnel"
CLOUDFLARE_TUNNEL_UUID="${CLOUDFLARE_TUNNEL_UUID:-}"  # Set via environment
CLOUDFLARE_CREDENTIALS_PATH="${HOME}/.cloudflared"

# Logging Configuration
LOG_DIR="${HOME}/.k3s-cluster-logs"
LOG_RETENTION_DAYS=30
DEBUG_MODE="${DEBUG:-false}"

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=5

# Validation Configuration
PREFLIGHT_CHECKS=true
POST_INSTALL_VALIDATION=true
HEALTH_CHECK_TIMEOUT=300  # 5 minutes

# Feature Flags
ENABLE_NFS=true
ENABLE_CLOUDFLARE_TUNNEL=true
ENABLE_MONITORING=false  # Future feature
ENABLE_BACKUP=true

# System Requirements
MIN_DISK_SPACE_GB=20
MIN_MEMORY_GB=8
MIN_CPU_CORES=4